{
  "include": [
    "./gatsby-*.js",
    "./scripts/*",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.js",
    "./test/**/*.ts",
    "./test/**/*.tsx"
  ],
  "exclude": ["node_modules/**/*", "public/*", "cypress/*", ".cache/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "jsx": "react",
    "lib": ["dom", "esnext", "es5"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": { "*": ["src/*", "static/*", "scripts/*", "test/*"] },
    "plugins": [{ "name": "typescript-styled-plugin" }],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5"
  }
}
